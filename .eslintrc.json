{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb", "plugin:react/recommended", "plugin:jest/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
    "no-console": 2,
    "no-unreachable-loop": 2,
    "array-callback-return": 1,
    "block-scoped-var": 2,
    "default-case": 2,
    "default-case-last": 2,
    "no-empty-function": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-loop-func": 1,
    "init-declarations": 1,
    "no-undefined": 2,
    "camelcase": 2,
    "prefer-spread": 2,
    "prefer-rest-params": 2,
    "comma-dangle": 0,
    "no-const-assign": 2,
    "linebreak-style": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-props-no-spreading": 0,
    "react/prop-types": 2,
    "import/no-extraneous-dependencies": 0
  }
}
